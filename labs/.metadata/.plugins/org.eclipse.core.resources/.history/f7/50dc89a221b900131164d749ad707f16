#include <iostream>
#include <fstream>
#include <string>
#include <stdlib.h>
#include "LinkedList.h"

using namespace std;

int main(int argc, const char * argv[])
{
    ifstream in;
    in.open(argv[1]);
    ofstream out;
    out.open(argv[2]);
	
	stringstream s;
	LinkedList<string> l;
	
	while (in >> s){
		string s1;
		s >> s1;
		string s2;
		string s3;
		if(s1 == "cle"){
			l.clear();
			out<< "clear" << endl;
		}
		else if(s1 == "ins"){
			s >> s2;
			s >> s3;
			int digit = atoi(s2.c_str());
			string data = s3;
			l.insert(digit,data);
			out << s << endl;
		}
		else if(s1 == "pri"){
			out << s << endl;
			l.print(out);
		}
		else if(s1 == "fin"){
			s >> s3;
			string data = s3;
			int i = l.find(data);
			out << "find " << data << " " << i << endl;
		}
		else if(s1 == "rem"){
			s >> s2;
			int digit = atoi(s2.c_str());
			string k = l.remove(digit);// l.remove(digit);
			out << "remove " << digit << " " << k << endl;
		}
	}
    
    
    return 0;
}

