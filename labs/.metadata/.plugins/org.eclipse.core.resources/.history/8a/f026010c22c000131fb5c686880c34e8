    void add(const obj& item) {
    	if (size == 0){
    		node* first = new node;
    		root = first;
    		first -> item = item;
    		first -> left = NULL;
    		first -> right = NULL;
    		first -> height = 1;
    	}
    	else {
    		add(item, root);
    	}
    }

    void add(const obj& item, node* where) {
    	if (item < where -> item){
    		if (where -> left == NULL){
    			node* temp = new node;
    			temp -> item = item;
    			temp -> height = where -> height + 1;
    			where -> left = temp;
    			size++;
    		}
    		else {
    			add(item, where->left);
    		}
    	}
    	if (item > where -> item){
    		if (where -> right == NULL){
    			node* temp = new node;
    			temp -> item = item;
    			temp -> height = where -> height + 1;
    			size++;
    			where -> right = temp;
    		}
    		else {
    			add(item, where->right);
    		}
    	}
    	if (item == where -> item){
    		return;
    	}
    }


    
