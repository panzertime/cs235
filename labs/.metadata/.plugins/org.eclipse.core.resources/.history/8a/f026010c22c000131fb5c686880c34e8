template <typename obj>

class avlTree {
public:
    
    avlTree<obj>(){
        size = 0;

        root = NULL;
    }
    
    virtual ~avlTree(){
        clear();
    }
    
    class node {
    public:
        obj item;
        node* left;
        node* right;
        int height;

    };
    
    
